<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- effect画像 ↓ -->
    <ImageView
        android:id="@+id/heart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clipToOutline="true"
        android:src="@drawable/heart"
        android:visibility="gone"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:id="@+id/hone"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clipToOutline="true"
        android:src="@drawable/hone"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/bird"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:clipToOutline="true"
        android:src="@drawable/bird"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"/>

    <!-- effect画像 ↑-->

    <Button
        android:id="@+id/button_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="end"
        android:fontFamily="@font/dotgothic16_regular"
        android:text="もう一度" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="251dp"
        android:layout_marginBottom="20dp">

        <View
            android:id="@+id/background_view"
            android:layout_width="252dp"
            android:layout_height="252dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="-0dp"
            android:alpha="0.5"
            android:background="@drawable/back1" />

        <TextView
            android:id="@+id/result_text_view"
            android:layout_width="245dp"
            android:layout_height="196dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="57dp"
            android:fontFamily="@font/dotgothic16_regular"
            android:text="結果"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#800080"
            android:textSize="20sp" />
    </RelativeLayout>


    <!-- 勝ちの画像 -->

    <ImageView
        android:id="@+id/result_image_view"
        android:layout_width="369dp"
        android:layout_height="360dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="Result Image" />

    <ImageView
        android:id="@+id/win"
        android:layout_width="221dp"
        android:layout_height="221dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:contentDescription="win Image"
        android:src="@drawable/win"
        android:visibility="gone" />

    <!-- 負けの画像 -->
    <ImageView
        android:id="@+id/lose"
        android:layout_width="221dp"
        android:layout_height="221dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:contentDescription="Lose Image"
        android:src="@drawable/lose"
        android:visibility="gone" />

    <!-- あいこの画像 -->
    <ImageView
        android:id="@+id/aiko"
        android:layout_width="221dp"
        android:layout_height="221dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:contentDescription="aiko Image"
        android:src="@drawable/aiko"
        android:visibility="gone" />

    <!-- もう一回の画像 -->
    <ImageView
        android:id="@+id/again"
        android:layout_width="221dp"
        android:layout_height="221dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:contentDescription="again Image"
        android:src="@drawable/again"
        android:visibility="gone" />

</LinearLayout>