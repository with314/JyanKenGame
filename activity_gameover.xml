<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/heart"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/heart"
        android:visibility="gone"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"/>

    <ImageView
        android:id="@+id/hone"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/hone"
        android:visibility="gone"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"/>

    <ImageView
        android:id="@+id/bird"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/bird"
        android:visibility="gone"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"/>

    <Button
        android:id="@+id/button_to_main"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="もう一度" />

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-100dp"
        android:layout_marginBottom="50dp"
        android:text="結果"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/result_image_view"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="50dp"
        android:contentDescription="Result Image"
        android:visibility="gone" />

    <!-- 勝ちの画像 -->
    <ImageView
        android:id="@+id/trophy"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/trophy"
        android:contentDescription="trophy Image"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:visibility="gone" />

    <!-- 負けの画像 -->
    <ImageView
        android:id="@+id/lose"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/lose"
        android:contentDescription="Lose Image"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:visibility="gone"/>

    <!-- あいこの画像 -->
    <ImageView
        android:id="@+id/aiko"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/aiko"
        android:contentDescription="aiko Image"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:visibility="gone"/>

    <!--もう一回の画像 -->
    <ImageView
        android:id="@+id/again"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/again"
        android:contentDescription="again Image"
        android:background="@drawable/circular_shape"
        android:clipToOutline="true"
        android:visibility="gone"/>

</LinearLayout>